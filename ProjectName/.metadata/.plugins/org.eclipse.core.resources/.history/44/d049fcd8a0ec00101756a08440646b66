
public class MidPoint {
	
	private Point p1, p2, mp;
	
	public MidPoint() {
		p1 = new Point(0,0,0);
		p2 = new Point(0,0,0);
		mp = new Point(0,0,0);
	}
	
	public MidPoint(Point p1, Point p2) {
		mp.setX((p1.getX()+p2.getX())/2);
		mp.setY((p1.getY()+p2.getY())/2);
		mp.setZ((p1.getZ()+p2.getZ())/2);
	}
}
